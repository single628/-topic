@import '../../icon.wxss';
.parse .head-title{
    background-color:#1BC7B0;
    text-align:center;
    font-size:16px;
    color:white;
    height:30px;
    line-height:30px;
    display:flex;
    flex-direction:row;

}
.back{
    width:20px;
    margin-left:8px;
    margin-right:100px;
}
.main{
    padding:8px 8px;
}
.answer{
    padding:0 0 8px 8px;
}
.analysis{
    border:1px solid #1BC7B0;
    border-radius:10px;
    padding:8px 8px;
}
.analysis .analysis-title{
    font-size:16px;
    padding:8px 8px;
    font-weight: 600;
}
.ananlysis .analysis-content{
    font-size:14px;
}
.foot-bar{
    position: fixed;
    display:flex;
    height:40px;
    font-size:15px;
    bottom:0px;
    color:silver;
}
.bar{
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width:100px;
    margin:0 auto;
}
.only-error,.answerCard,.errorRecovery{
    width:130px;
    margin-right:30px;
    font-size:12px;
}
