/* topic.wxss */
@import '../../icon.wxss';

.topic-head {
  padding: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex: 1;
  font-size: 14px;
  color: black;
  height: 40px;
}

.topic-head .head-left {
  width: 20px;
  height: 30px;
}

.topic-head .head-left .iconfont {
  display: inline-block;
  width: 100%;
  height: 100%;
  color: black;
  font-size: 14px;
}

.topic-head .head-title {
  width: 40px;
  height: 30px;
}

.topic-head .head-right {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 50px;
}

.topic-head .head-right .li {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
}

.topic-head .head-right .li .iconfont {
  font-size: 14px;
  color: black;
  margin-bottom: 5px;
}

.topic-head .head-right .li .icon-text {
  font-size: 12px;
  color: black;
}

.task {
  margin-top: 10px;
  padding: 0 5px 0 10px;
  font-size: 15px;
}



.next-button {
  display: flex;
  flex-direction: row;
  position:fixed;
  bottom:20px;
  width:300px;
  margin:0 auto;
}

.next-button .next,
.next-button .back {
  width: 130px;
  line-height: 30px;
  border: 1px solid #1BC7B0;
  border-radius: 30px;
  color: #1BC7B0;
}
.next-button .emit {
  width: 130px;
  line-height: 30px;
  border: 1px solid #1BC7B0;
  border-radius: 30px;
  color: #1BC7B0;
  margin:0 auto;
}